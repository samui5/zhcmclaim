<mvc:View controllerName="hcm.claim.controller.Main" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:unified="sap.ui.unified" displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<!--<List items="{/ClaimSet}">-->
					<!--	<DisplayListItem label="{Pernr}" value="{Createdate}"></DisplayListItem>-->
					<!--</List>-->
					<ObjectHeader title="Personnel No.: {local>/empId}" number="" intro="CLAIM NO:XXXXXXX" numberUnit="Draft">
						<firstStatus>
							<ObjectStatus text="Draft" state="Success"></ObjectStatus>
						</firstStatus>
					</ObjectHeader>
					<f:SimpleForm editable="true">
						<f:content>
							<Label text="Month"/>
							<Select id="idMonth" items="{local>/calendar/months}" width="25%">
								<core:Item key="{local>abbreviation}" text="{local>name}"/>
							</Select>
							<Label text="Year"></Label>
							<Select id="idYear" width="25%" items="{local>/calendar/years}">
								<core:Item key="{local>year}" text="{local>year}"/>
							</Select>
						</f:content>
					</f:SimpleForm>
					<Table items="{local>/tableData}" fixedLayout="false" noDataText="Add Items..." mode="MultiSelect">
						<headerToolbar>
							<Toolbar>
								<ToolbarSpacer/>
								<Button text="Add" icon="sap-icon://add" press="onAddRow" type="Accept"></Button>
								<Button text="Delete" icon="sap-icon://delete" press="onDeleteRow" type="Reject"></Button>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="{i18n>WageType}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>CreateDate}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>StartTime}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>EndTime}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>Purpose}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>Destination}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>Status}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>ClaimAmount}"></Text>
							</Column>
							<Column>
								<Text text="{i18n>Attachment}"></Text>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Select selectedKey="{local>Wagetype}">
										<core:Item key="C" text="Covering Forlift"/>
										<core:Item key="H" text="Hardship"/>
									</Select>
									<DatePicker value="{path:'local>Createdate'}" valueFormat="dd.MM.yyyy" displayFormat="dd.MM.yyyy" enabled="true"/>
									<TimePicker id="idST" value="{local>TimeStart}" valueFormat="HH:mm" displayFormat="hh:mm a" change="handleChange" placeholder="Start time"/>
									<TimePicker id="idET" value="{local>TimeEnd}" valueFormat="HH:mm" displayFormat="hh:mm a" change="handleChange" placeholder="End time"/>
									<Input value="{local>Purpose}" enabled="{=${local>Wagetype}==='H' ? true : false}"/>
									<Input value="{local>Destination}" enabled="{=${local>Wagetype}==='H' ? true : false}"/>
									<ObjectStatus class="sapUiSmallMargin" icon="{path:'local>Status', formatter : '.formatter.statusIcon'}"
										text="{path:'local>Status', formatter : '.formatter.statusText'}" state="{path:'local>State', formatter : '.formatter.statusState'}"/>
									<Input value="{local>ClaimValue}"/>
									<unified:FileUploader name="myFileUpload" fileType='pdf, doc' multiple="false" change="onUploadChange"
										tooltip="Upload your file to the local system"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="idonSave" type="Emphasized" text="{i18n>Save}" press="onSave" enabled="true"></Button>
						<Button id="idonSubmit" type="Emphasized" text="{i18n>Submit}" press="onSubmit" enabled="false"></Button>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>